
<%- include("partials/header") -%>

<% if(posts.length==0){ %>
    <h1>No Posts Yet!</h1>
<% } %>

<% posts.forEach(function(post){ %>
    <h1><%= post.postTitle %></h1>
    <p class="post">
        <%= post.postBody.substring(0,100)+" ...  " %>
        <a href="/posts/<%= post.postTitle  %>">Read more</a>
    </p>
<% }); %>


<%- include("partials/footer") -%>